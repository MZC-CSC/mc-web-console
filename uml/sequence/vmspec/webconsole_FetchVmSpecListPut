@startuml
title "Fetch VM Spec List PUT"

actor User as user

participant "app.go" as app
participant "vmspec.go" as route
participant "ResourceHandler" as handler

box "External Module"
participant "cb-tumblebug" as tumblebug
box end

group "API Call"
user ->  app : PUT : /api/settings/resources/vmspec/fetchvmspec
user ->  app : Sesscion : namespaceID
end

app -> route : FetchVmSpecList()
route ->  handler : FetchVmSpecInfoListByAsync(namespaceID, c)
handler <-> tumblebug : http request to FetchVmSpeclist 
route <- handler 
user <-  route : return FetchVmSpeclist
@enduml